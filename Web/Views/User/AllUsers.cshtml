@model List<ApplicationUserViewModel>

@{ 
    ViewData["Title"] = "All Users";
}

<h1>All Users</h1>

<table class="table table-striped mt-2">
    <thead>
        <tr>
            <th scope="col">
                ID
            </th>
            <th scope="col">
                Reputation
            </th>
            <th scope="col">
                Email
            </th>
            <th scope="col">
                Joined on
            </th>
            <th>
                Actions
            </th>

        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.Reputation</td>
                <td>@user.Email</td>
                <td>@user.DateAdded</td>
                <td>
                    <a class="btn btn-primary btn-sm" asp-action="ManageUserClaims" asp-controller="Administration" asp-route-userId="@user.Id">
                        Manage Claims
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
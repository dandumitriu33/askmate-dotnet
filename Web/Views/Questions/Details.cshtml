@model QuestionViewModel

@{ 
    
}

<p>Details</p>
<p>@Model.Id</p>
<p>@Model.Title</p>
<p>@Model.Views</p>
<p>@Model.Body</p>
<p>@Model.DateAdded</p>
@if (Model.ImageNamePath != null)
{
    <img src="~/uploads/@Model.ImageNamePath" alt="Image related to the question."/>
}
<br />
<a class="btn btn-primary"
   asp-area=""
   asp-controller="Comments"
   asp-action="AddQuestionComment"
   asp-route-questionId="@Model.Id">
    Comment
</a>
<a class="btn btn-warning"
   asp-area=""
   asp-controller="Questions"
   asp-action="Edit"
   asp-route-questionId="@Model.Id">
    Edit
</a>
<a class="btn btn-danger"
   asp-area=""
   asp-controller="Questions"
   asp-action="Remove"
   asp-route-questionId="@Model.Id">
    Remove
</a>


<hr />
@foreach (var questionComment in Model.QuestionComments)
{
    <p>@questionComment.Body (@questionComment.DateAdded)</p>
}
<hr />


<table class="table table-striped mt-2">
    <thead>
        <tr>
            <th scope="col">
                Votes
            </th>
            <th scope="col">
                Body
            </th>
            <th scope="col">
                Comments
            </th>
            <th scope="col">
                Added
            </th>
            <th scope="col">
                Image
            </th>
            <th scope="col">
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var answer in Model.Answers)
        {
        <tr>
            <th scope="row">
                <a asp-area=""
                   asp-controller="Answers"
                   asp-action="VoteUpAnswer"
                   asp-route-answerId="@answer.Id"
                   asp-route-questionId="@Model.Id">
                    ^
                </a>
                @answer.Votes
                <a asp-area=""
                   asp-controller="Answers"
                   asp-action="VoteDownAnswer"
                   asp-route-answerId="@answer.Id"
                   asp-route-questionId="@Model.Id">
                    v
                </a>
            </th>
            <td>@answer.Body</td>
            <td>
                @foreach (var answerComment in answer.AnswerComments)
                {
                    <p>@answerComment.Body (@answerComment.DateAdded)</p>
                }
            </td>
            <td>@answer.DateAdded</td>
            @if (answer.ImageNamePath == null)
            {
                <td>
                    -
                </td>
            }
            else
            {
                <td>
                    <a href="~/uploads/@answer.ImageNamePath" target="_blank"><img class="answerImageThumbnail" src="~/uploads/@answer.ImageNamePath" alt="Image related to the answer." /></a>
                </td>
            }
            <td>
                <a class="btn btn-primary"
                   asp-area=""
                   asp-controller="Comments"
                   asp-action="AddAnswerComment"
                   asp-route-questionId="@Model.Id"
                   asp-route-answerId="@answer.Id">
                    Comment
                </a>
                <a class="btn btn-warning"
                   asp-area=""
                   asp-controller="Answers"
                   asp-action="EditAnswer"
                   asp-route-answerId="@answer.Id">
                    Edit
                </a>
                <a class="btn btn-danger"
                   asp-area=""
                   asp-controller="Answers"
                   asp-action="Remove"
                   asp-route-questionId="@Model.Id"
                   asp-route-answerId="@answer.Id">
                    Remove
                </a>
            </td>
        </tr>
        }
    </tbody>
</table>

<hr />
<a class="btn btn-primary"
   asp-area=""
   asp-controller="Answers"
   asp-action="AddAnswer"
   asp-route-questionId="@Model.Id">
    Answer
</a>
<hr />
@model TagViewModel

@{ 
    string questionId = ViewData["questionId"].ToString();
}

<div class="row">
    <div class="col-md-12">
        <form method="post" asp-action="AddTag" asp-controller="Tags" asp-route-questionId="@questionId">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <div class="form-group">
                    <input type="hidden" name="Id" asp-for="Id" value="@Model.Id">
                </div>
                <label asp-for="Name"></label>
                <input asp-for="Name"
                       class="form-control"
                       name="Name"
                       data-val="true"
                       aria-describedby="name-error"
                       data-val-required="The tag name is required."
                       aria-invalid="true" />
                <span asp-validation-for="Name"
                      class="field-validation-error text-danger ml-2 text-danger"
                      data-valmsg-for="Name"
                      data-valmsg-replace="true"></span>
            </div>
            <button name="SubmitNewTag" type="submit" class="btn btn-primary">Create Tag and Attach</button>
        </form>
    </div>
</div>
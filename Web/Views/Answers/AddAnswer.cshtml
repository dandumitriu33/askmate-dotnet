@model AnswerViewModel

@{
    ViewData["Title"] = "Add answer";
}

<h1>Add an answer</h1>

<div class="row">
    <div class="col-md-12">
        <form enctype="multipart/form-data" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <input type="hidden" name="questionId" value="@Model.QuestionId">
            </div>
            <div class="form-group">
                <label asp-for="Body"></label>
                <textarea asp-for="Body"
                          class="form-control"
                          data-val="true"
                          aria-describedby="body-error"
                          aria-invalid="true">
                </textarea>
                <span asp-validation-for="Body"
                      class="field-validation-error text-danger ml-2 text-danger"
                      data-valmsg-for="Body"
                      data-valmsg-replace="true"></span>
            </div>
            <div class="form-group">
                <div class="custom-file">
                    <label asp-for="Image" class="custom-file-label">Choose file...</label>
                    <input asp-for="Image"
                           class="form-control custom-file-input"
                           name="Image" />
                </div>
            </div>
            <button name="SubmitNewAnswer" type="submit" class="btn btn-primary">Submit Answer</button>
        </form>
    </div>
</div>

@section Scripts {
    <script type="module" src="~/js/addAnswer.js"></script>
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}

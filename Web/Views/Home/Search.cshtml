@model List<QuestionViewModel>

@{
    ViewData["Title"] = "Search Results";
    int substringLength = 0;
    string dots = "";
}

<div class="text-center">
    <h1 class="display-4">Search results</h1>

    <table class="table table-striped mt-2">
        <thead>
            <tr>
                <th scope="col">
                    Votes
                </th>
                <th scope="col">
                    Title
                </th>
                <th scope="col">
                    Body
                </th>
                <th scope="col">
                    Views
                </th>
                <th scope="col">
                    Added
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var question in Model)
            {
                <tr>
                    <th scope="row">
                        @question.Votes
                    </th>
                    <td>
                        <a asp-area=""
                           asp-controller="Questions"
                           asp-action="Details"
                           asp-route-questionId=@question.Id>@question.Title</a>
                    </td>
                    <td>@Html.Raw(question.Body.Replace((string)ViewData["searchPhrase"], "<mark class='font-weight-bold'>" + (string)ViewData["searchPhrase"] + "</mark>"))</td>
                    <td>@question.Views</td>
                    <td>@question.DateAdded</td>
                </tr>
            }
        </tbody>
    </table>


</div>
@model List<TagViewModel>

<h3>Select a Tag or create a new one.</h3>

<hr />
<p>
    @foreach (var tagVM in Model)
    {
        <span>
            @tagVM.Name
            ( <a 
                 asp-controller="Tags"
                 asp-action="AddTagToQuestion"
                 asp-route-questionId="@tagVM.QuestionId"
                 asp-route-tagName="@tagVM.Name">
                 +
              </a>)
        </span>
    }
</p>
<hr />



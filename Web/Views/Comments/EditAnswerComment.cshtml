@model AnswerCommentViewModel

@{
    ViewData["Title"] = "Edit Comment";
}

<h1>Edit comment</h1>

<div class="row">
    <div class="col-md-12">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <input type="hidden" name="questionId" value="@Model.QuestionId">
            </div>
            <div class="form-group">
                <input type="hidden" name="answerId" value="@Model.AnswerId">
            </div>
            <div class="form-group">
                <input type="hidden" name="Id" value="@Model.Id">
            </div>
            <div class="form-group">
                <label asp-for="Body"></label>
                <textarea asp-for="Body"
                          class="form-control"
                          name="Body"
                          data-val="true"
                          aria-describedby="body-error"
                          aria-invalid="true">
                </textarea>
                <span asp-validation-for="Body"
                      class="field-validation-error text-danger ml-2 text-danger"
                      data-valmsg-for="Body"
                      data-valmsg-replace="true"></span>
            </div>
            <button name="SubmitEditedAnswerComment" type="submit" class="btn btn-primary">Edit Comment</button>
        </form>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}

